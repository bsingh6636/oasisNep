{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "node"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages"
    ],
    "no-console": "off",
    "import/prefer-default-export": "off",
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "version": ">=14.0.0",
        "ignores": [
          "modules"
        ]
      }
    ]
  }
}